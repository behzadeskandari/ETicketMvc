@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "List Of All Users";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>List of all Users</h4>
        </p>
        
        <table>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.FullName)</th>
                    <th>@Html.DisplayNameFor(m => m.UserName)</th>
                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => @item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => @item.UserName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelitem => @item.Email)
                        </td>
                 
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-white" style="position: fixed, right: 25px;bottom:25px;">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>Add New
    </a>
</div>